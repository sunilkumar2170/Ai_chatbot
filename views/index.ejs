<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My AI Travel Bot</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      position: relative;
      min-height: 100vh;
    }

    .top-right {
      position: absolute;
      top: 20px;
      right: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
    }

    .bubble {
      max-width: 70%;
      margin: 5px;
      padding: 10px;
      border-radius: 10px;
    }

    .user {
      background: #d1e7dd;
      text-align: right;
      margin-left: auto;
    }

    .bot {
      background: #f8d7da;
      text-align: left;
      margin-right: auto;
    }

    #chat-box {
      max-height: 400px;
      overflow-y: auto;
      border: 1px solid #ccc;
      padding: 10px;
      margin-top: 80px;
    }

    #chat-input {
      margin-top: 10px;
      display: flex;
      gap: 10px;
    }

    input {
      flex: 1;
      padding: 10px;
    }

    button {
      padding: 10px 20px;
    }
  </style>
</head>

<body>


  <div class="top-right">
   
    <span class="fw-bold">ðŸ“ž  +1 (415) 523-8886</span>

 
    <a href="https://wa.me/14155238886?text=Hello%20Admin!" target="_blank" class="btn btn-success btn-sm">
      <i class="bi bi-whatsapp"></i> Chat on WhatsApp
    </a>

    <% if (user) { %>
      <span class="fw-bold text-primary"><%= user.name %>!</span>
      <a href="/history" class="btn btn-outline-info btn-sm">My History</a>
      <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
    <% } else { %>
      <a href="/login" class="btn btn-outline-primary btn-sm">Login</a>
      <a href="/signup" class="btn btn-outline-success btn-sm">Sign Up</a>
    <% } %>
  </div>

 
  <h1>My AI Travel Bot</h1>

 
  <div id="chat-box">
    <% history.forEach(h => { %>
      <div class="bubble user"><strong>You:</strong> <%= h.question %></div>
      <% if (h.answer) { %>
        <div class="bubble bot"><strong>Bot:</strong> <%= h.answer %></div>
      <% } %>
    <% }) %>
  </div>


  <div id="chat-input">
    <input type="text" id="message" placeholder="Ask anything..." />
    <button id="sendBtn" class="btn btn-primary">Send</button>
  </div>

 
  <script>
    const sendBtn = document.getElementById('sendBtn');
    const messageInput = document.getElementById('message');
    const chatBox = document.getElementById('chat-box');

    sendBtn.onclick = async () => {
      const userMessage = messageInput.value.trim();
      if (!userMessage) return;

   
      const userBubble = document.createElement('div');
      userBubble.className = 'bubble user';
      userBubble.innerHTML = "<strong>You:</strong> " + userMessage;
      chatBox.appendChild(userBubble);
      chatBox.scrollTop = chatBox.scrollHeight;

      const res = await fetch('/chat', {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ message: userMessage })
      });

      const data = await res.json();

      const botBubble = document.createElement('div');
      botBubble.className = 'bubble bot';
      botBubble.innerHTML = "<strong>Bot:</strong> " + data.reply;
      chatBox.appendChild(botBubble);
      chatBox.scrollTop = chatBox.scrollHeight;

      // Save to DB
      await fetch('/ask', {
        method: 'POST',
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ question: userMessage })
      });

      messageInput.value = "";
    };
  </script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
